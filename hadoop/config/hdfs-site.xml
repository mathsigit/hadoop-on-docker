<configuration>
  <property>
     <name>dfs.replication</name>
     <value>3</value>
  </property>

  <property>
      <name>dfs.namenode.name.dir</name>
      <value>/dfs/namenode</value>
  </property>

  <property>
       <!-- <name>dfs.data.dir</name> -->
       <name>dfs.datanode.data.dir</name>
       <value>/dfs/data</value>
       <description>default: file://${hadoop.tmp.dir}/dfs/data</description>
  </property>

  <property>
       <name>dfs.permissions.enabled</name>
       <value>false</value>
  </property>

</configuration>
